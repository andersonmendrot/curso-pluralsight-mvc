@model ShoppingCartViewModel

<h2>Your Shopping Cart</h2>

<table class="table table-bordered table-striped" border="1" bordercolor="#ff0000">
    <thead>
        <tr>
            <th>Selected Amount</th>
            <th>Pies</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td>@item.Amount</td>
                <td>@item.Pie.Name</td>
                <td>@item.Pie.Price</td>
                <td>@(item.Amount*item.Pie.Price)</td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
           <td colspan="3" class="text-right">Total</td>
           <td class="text-right">
               @Model.ShoppingCartTotal
           </td>
        </tr>
    </tfoot>
    
</table>